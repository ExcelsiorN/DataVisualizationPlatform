<UserControl x:Class="DataVisualizationPlatform.Controls.SimplePieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="SimplePieChartControl">

    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid Width="100" Height="100">
                <!-- 背景圆 -->
                <Ellipse Width="90" Height="90" 
                         Fill="#F5F5F5" 
                         Stroke="#DDD" 
                         StrokeThickness="1"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>

                <!-- 数据弧线 -->
                <Canvas Width="100" Height="100" x:Name="PieCanvas">
                </Canvas>

                <!-- 中心文字 -->
                <TextBlock x:Name="PercentageText"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           FontSize="14" 
                           FontWeight="Bold"
                           Foreground="#333"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>