<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:cmd="clr-namespace:DataVisualizationPlatform.Commands;assembly=DataVisualizationPlatform"
>

    <!-- 转换器 -->
    <cmd:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!-- 页面标题样式 -->
    <Style x:Key="PageTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="3" ShadowDepth="2" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 页面副标题样式 -->
    <Style x:Key="PageSubtitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#7F8C8D"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>

    <!-- 主卡片样式 -->
    <Style x:Key="MainCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="BorderBrush" Value="#E0E6ED"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#F8FAFB" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="20" ShadowDepth="8" Opacity="0.15" Color="#000000"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 月度图表容器样式 -->
    <Style x:Key="MonthlyChartContainerStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="BorderBrush" Value="#E8EDF3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#FBFCFD" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.1" Color="#000000"/>
            </Setter.Value>
        </Setter>
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>

        <!-- 悬停效果 -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="4" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 月份标题样式 -->
    <Style x:Key="MonthTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#2C3E50"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#DDDDDD" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 故障堆叠柱子样式（绿色系 - 顶部） -->
    <Style x:Key="FaultStackedBarStyle" TargetType="Border">
        <Setter Property="Width" Value="45"/>
        <Setter Property="CornerRadius" Value="6,6,0,0"/>
        <Setter Property="MinHeight" Value="8"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#81C784" Offset="0"/>
                    <GradientStop Color="#4CAF50" Offset="0.3"/>
                    <GradientStop Color="#388E3C" Offset="0.7"/>
                    <GradientStop Color="#2E7D32" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#2E7D32" Offset="0"/>
                    <GradientStop Color="#1B5E20" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1,1,1,0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#1B5E20" BlurRadius="3" Direction="315" ShadowDepth="1" Opacity="0.3"/>
            </Setter.Value>
        </Setter>

        <!-- 悬停动画效果 -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.2" 
                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                          To="#66BB6A"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Duration="0:0:0.2" 
                                          Storyboard.TargetProperty="(Border.Background).(LinearGradientBrush.GradientStops)[1].(GradientStop.Color)"
                                          To="#4CAF50"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 预约堆叠柱子样式（橙色系 - 底部） -->
