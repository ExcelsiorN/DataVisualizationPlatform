<Page x:Class="DataVisualizationPlatform.Views.MainMenu"
      x:Name="MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:DataVisualizationPlatform.ViewModels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource Page_Style}">

    <Page.DataContext>
        <vm:MainMenuViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <!-- 引用样式资源 -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/MainMenuStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    
    <Grid Style="{StaticResource MainMenuGridStyle}">


        <!-- 使用Canvas来手动控制拖动 -->
        <Canvas x:Name="MainCanvas" 
                ClipToBounds="True"
                Background="Transparent"
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                MouseMove="Canvas_MouseMove"
                MouseLeave="Canvas_MouseLeave">

            <!-- 页面容器，使用Canvas定位 -->
            <StackPanel x:Name="PagesContainer"
                        Canvas.Left="0"
                        Canvas.Top="0"
                        Style="{StaticResource PagesContainerStyle}">

                <!-- 页面1 -->
                <Border x:Name="Page1" Style="{StaticResource PageBorderStyle}">
                    <Grid >
                        <TextBlock Text="大标题 1" Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="小标题 1" Style="{StaticResource ContentTextStyle}"/>
                    </Grid>
                </Border>

                <!-- 页面2 -->
                <Border x:Name="Page2" Style="{StaticResource PageBorderStyle}">
                    <Grid>
                        <TextBlock Text="大标题 2" Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="小标题 2" Style="{StaticResource ContentTextStyle}"/>
                    </Grid>
                </Border>

                <!-- 页面3 -->
                <Border x:Name="Page3" Style="{StaticResource PageBorderStyle}">
                    <Grid>
                        <TextBlock Text="大标题 3" Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="小标题 3" Style="{StaticResource ContentTextStyle}"/>
                    </Grid>
                </Border>

                <!-- 循环回到页面1 -->
                <Border x:Name="Page1Copy" Style="{StaticResource PageBorderStyle}">
                    <Grid>
                        <TextBlock Text="大标题 1" Style="{StaticResource PageTitleStyle}"/>
                        <TextBlock Text="小标题 1" Style="{StaticResource ContentTextStyle}"/>
                    </Grid>
                </Border>

            </StackPanel>
        </Canvas>

        <!-- 页面指示器 -->
        <StackPanel Style="{StaticResource IndicatorStackPanelStyle}">
            <Ellipse x:Name="Indicator1" Style="{StaticResource IndicatorStyle}"/>
            <Ellipse x:Name="Indicator2" Style="{StaticResource IndicatorStyle}"/>
            <Ellipse x:Name="Indicator3" Style="{StaticResource IndicatorStyle}"/>
        </StackPanel>
    </Grid>
</Page>