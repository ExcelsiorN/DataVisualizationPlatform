<Page x:Class="DataVisualizationPlatform.Views.HomePageA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataVisualizationPlatform.Controls"
        xmlns:vm="clr-namespace:DataVisualizationPlatform.ViewModels"
        mc:Ignorable="d"
        Title="HomePageA" Height="450" Width="800"
        Style="{StaticResource Page_Style}">

    <Page.DataContext>
        <vm:HomePageAViewModel />
    </Page.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="年度收入数据"
                   Style="{StaticResource TitleTextStyle}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <!-- 图表容器 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 折线图 -->
            <Border Grid.Column="0" Style="{StaticResource ChartContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <local:AnimatedLineChart Grid.Row="1"
                                           DataPoints="{Binding LineData}"
                                           AnimationProgress="{Binding AnimationProgress}"
                                           Margin="10"/>
                </Grid>
            </Border>

           
        </Grid>
    </Grid>
</Page>
