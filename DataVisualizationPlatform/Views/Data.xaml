<Page x:Class="DataVisualizationPlatform.Views.Data"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:DataVisualizationPlatform.ViewModels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:DataVisualizationPlatform.Controls"
      xmlns:tools="clr-namespace:DataVisualizationPlatform.Converters"
      d:DesignHeight="450" d:DesignWidth="800"
      mc:Ignorable="d"
      Style="{StaticResource Page_Style}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DataStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Page.DataContext>
        <vm:DataViewModel />
    </Page.DataContext>

    <Grid Background="Transparent" Margin="20">
        <!-- 卡片容器 -->
        <Border Style="{StaticResource Data_MainCardStyle}" 
                Width="Auto" 
                Height="Auto" 
                MaxWidth="1400">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 卡片标题 -->
                <TextBlock Grid.Row="0" 
                           Text="年度数据" 
                           Style="{StaticResource Data_PageTitleText}" 
                           TextAlignment="Center" 
                           Margin="0,10,0,5"/>                           

                <TextBlock Grid.Row="1" Text="故障数量与预约完成情况趋势" 
                           Style="{StaticResource Data_PageSubtitleText}" 
                           TextAlignment="Center" 
                           Margin="0,0,0,30"/>                           

                <!-- 图表容器 -->
                <Grid Grid.Row="1" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 柱状图 -->
                    <Border  Style="{StaticResource ChartContainerStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <local:AnimatedBarChart x:Name="BarArea" Grid.Row="1"
                                                    DataItems="{Binding BarData}"
                                                    AnimationProgress="{Binding AnimationProgress}"
                                                    Margin="10"/>

                            <Grid Grid.Row="1">
                                <ItemsControl ItemsSource="{Binding Months}"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch"
                                              Margin="0,20,0,0">                                             
                                    <ItemsControl.Width>
                                        <Binding ElementName="BarArea" Path="ActualWidth">
                                            <Binding.Converter>
                                                <tools:SubtractConverter Offset="75"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </ItemsControl.Width>
                                    <ItemsControl.Height>
                                        <Binding ElementName="BarArea" Path="ActualHeight">
                                            <Binding.Converter>
                                                <tools:SubtractConverter Offset="50"/>
                                            </Binding.Converter>
                                        </Binding>
                                    </ItemsControl.Height>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="12"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <!-- 按比例分配 -->
                                                    <RowDefinition Height="Auto"/>
                                                    <!-- 月份文字 -->
                                                </Grid.RowDefinitions>

                                                <Button Grid.Row="0"
                                                        Background="Transparent"
                                                        VerticalAlignment="Stretch"
                                                        HorizontalAlignment="Stretch"
                                                        Command="{Binding DataContext.OpenMonthlyDataCommand, 
                                                          RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding Key}">

                                                    <Button.Template>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="Transparent">
                                                                <ContentPresenter 
                                                                    HorizontalAlignment="Stretch" 
                                                                    VerticalAlignment="Stretch"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>

                                                <!--<TextBlock Grid.Row="1"
                                                           Text="{Binding DisplayMonth}"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,5,0,0"/>-->
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>

                                </ItemsControl>
                            </Grid>


                            <!-- 图例 -->
                            <StackPanel Grid.Row="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Center"
                                        Margin="0,15,0,0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                                    <Rectangle Width="16" Height="16" 
                                               Fill="#10B981" 
                                               Margin="0,0,8,0"/>                                               
                                    <TextBlock Text="预约单数" 
                                               Style="{StaticResource LegendTextStyle}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="16" Height="16" 
                                               Fill="#6366F1" 
                                               Margin="0,0,8,0"/>                                               
                                    <TextBlock Text="故障次数" 
                                               Style="{StaticResource LegendTextStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>