<Page x:Class="DataVisualizationPlatform.Views.FaultEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DataVisualizationPlatform.Views"
      xmlns:vm="clr-namespace:DataVisualizationPlatform.ViewModels"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="故障信息编辑"
      Background="#F5F5F5"
      Style="{StaticResource Page_Style}">

    <Page.Resources>
        <!-- 引用样式资源 -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/EditStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 工具栏 -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行：搜索框和按钮 -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 搜索框 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="搜索故障："
                                   Style="{StaticResource LabelStyle}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Width="300"
                                 Style="{StaticResource TextBoxStyle}"
                                 VerticalAlignment="Center"
                                 ToolTip="可搜索设备ID、故障类型、故障详情、批注信息"/>
                    </StackPanel>

                    <!-- 操作按钮 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🔄 清空筛选"
                                Command="{Binding ClearFilterCommand}"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Margin="0,0,10,0"/>
                        <Button Content="💾 保存数据"
                                Command="{Binding SaveCommand}"
                                Style="{StaticResource SaveButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- 第二行：筛选条件 -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                    <!-- 设备筛选 -->
                    <TextBlock Text="设备编号："
                               Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding DeviceList}"
                              SelectedItem="{Binding SelectedDevice, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                              Width="120"
                              Padding="8"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>

                    <!-- 年份筛选 -->
                    <TextBlock Text="年份："
                               Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding YearList}"
                              SelectedItem="{Binding SelectedYear, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                              Width="100"
                              Padding="8"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>

                    <!-- 月份筛选 -->
                    <TextBlock Text="月份："
                               Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox ItemsSource="{Binding MonthList}"
                              SelectedItem="{Binding SelectedMonth, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                              Width="100"
                              Padding="8"
                              FontSize="14"
                              VerticalAlignment="Center"
                              Margin="0,0,20,0"/>

                    <!-- 状态筛选 -->
                    <TextBlock Text="状态："
                               Style="{StaticResource LabelStyle}"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <ComboBox SelectedValue="{Binding StatusFilter, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource ModernComboBoxStyle}"
                              ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                              SelectedValuePath="Content"
                              Width="120"
                              Padding="8"
                              FontSize="14"
                              VerticalAlignment="Center">
                        <ComboBoxItem Content="全部状态"/>
                        <ComboBoxItem Content="待处理"/>
                        <ComboBoxItem Content="处理中"/>
                        <ComboBoxItem Content="已处理"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：故障列表 -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="8"
                    Margin="0,0,15,0">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 列表标题 -->
                    <Border Grid.Row="0"
                            Background="#FF9800"
                            CornerRadius="8,8,0,0"
                            Padding="15,10">
                        <Grid>
                            <TextBlock Text="故障列表"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center">
                                <Border Background="White"
                                       CornerRadius="10"
                                       Padding="8,3">
                                    <TextBlock FontSize="12"
                                              FontWeight="Medium"
                                              Foreground="#FF9800">
                                        <Run Text="{Binding FilteredFaultList.Count, Mode=OneWay}" />
                                        <Run Text=" 条"/>
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 故障列表 -->
                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding FilteredFaultList}"
                             SelectedItem="{Binding SelectedFault}"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0"
                                        BorderThickness="0,0,0,1"
                                        Padding="12"
                                        Background="Transparent">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- 第一行：故障ID和状态 -->
                                        <Grid Grid.Row="0">
                                            <TextBlock Text="{Binding Fal_Id, StringFormat='故障 #{0}'}"
                                                       FontWeight="Bold"
                                                       FontSize="14"
                                                       Foreground="#263238"
                                                       HorizontalAlignment="Left"/>
                                            <Border HorizontalAlignment="Right"
                                                    CornerRadius="3"
                                                    Padding="6,2">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Fal_Info}" Value="待处理">
                                                                <Setter Property="Background" Value="#EF5350"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Fal_Info}" Value="处理中">
                                                                <Setter Property="Background" Value="#FFA726"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Fal_Info}" Value="已处理">
                                                                <Setter Property="Background" Value="#66BB6A"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Fal_Info}"
                                                           FontSize="11"
                                                           FontWeight="Medium"
                                                           Foreground="White"/>
                                            </Border>
                                        </Grid>

                                        <!-- 第二行：设备ID和故障类型 -->
                                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Fal_Eqid}"
                                                       FontSize="12"
                                                       Foreground="#757575"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="|"
                                                       FontSize="12"
                                                       Foreground="#BDBDBD"
                                                       Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding Fal_Type}"
                                                       FontSize="12"
                                                       Foreground="#757575"/>
                                        </StackPanel>

                                        <!-- 第三行：日期 -->
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Fal_Data}"
                                                   FontSize="11"
                                                   Foreground="#9E9E9E"
                                                   Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- 右侧：编辑表单 -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="8">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.2"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20" DataContext="{Binding SelectedFault}">
                        <TextBlock Text="故障详细信息"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#263238"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 故障ID -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="故障ID" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding Fal_Id, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"
                                         IsReadOnly="True"
                                         Background="#F5F5F5"/>
                            </StackPanel>

                            <!-- 设备ID -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="设备ID" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding Fal_Eqid, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>

                            <!-- 故障类型 -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                                <TextBlock Text="故障类型" Style="{StaticResource LabelStyle}"/>
                                <ComboBox SelectedValue="{Binding Fal_Type, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource ModernComboBoxStyle}"
                                          ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                          SelectedValuePath="Content"
                                          Padding="8"
                                          FontSize="14">
                                    <ComboBoxItem Content="硬件故障"/>
                                    <ComboBoxItem Content="软件故障"/>
                                    <ComboBoxItem Content="网络故障"/>
                                    <ComboBoxItem Content="其他故障"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- 处理状态 -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                                <TextBlock Text="处理状态" Style="{StaticResource LabelStyle}"/>
                                <ComboBox SelectedValue="{Binding Fal_Info, UpdateSourceTrigger=PropertyChanged}"
                                          Style="{StaticResource ModernComboBoxStyle}"
                                          ItemContainerStyle="{StaticResource ModernComboBoxItemStyle}"
                                          SelectedValuePath="Content"
                                          Padding="8"
                                          FontSize="14">
                                    <ComboBoxItem Content="待处理"/>
                                    <ComboBoxItem Content="处理中"/>
                                    <ComboBoxItem Content="已处理"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- 故障日期 -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="故障日期" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding Fal_Data, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"/>
                            </StackPanel>

                            <!-- 故障描述 -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="故障详情" Style="{StaticResource LabelStyle}"/>
                                <TextBox Text="{Binding Fal_Detail, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource TextBoxStyle}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="80"
                                         MaxHeight="150"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                            <!-- 批注 -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,15">
                                <TextBlock Text="批注信息" Style="{StaticResource LabelStyle}"/>
                                <Border BorderBrush="#FFA726"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        Background="#FFF8E1">
                                    <TextBox Text="{Binding Fal_Remark, UpdateSourceTrigger=PropertyChanged}"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             MinHeight="100"
                                             MaxHeight="200"
                                             VerticalScrollBarVisibility="Auto"
                                             Padding="8"
                                             FontSize="14"
                                             Foreground="#424242"/>
                                </Border>
                                <TextBlock Text="💡 在此添加处理进度、解决方案、备注等信息"
                                           FontSize="11"
                                           Foreground="#757575"
                                           Margin="0,5,0,0"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Grid>

                        <!-- 提示信息 -->
                        <Border Background="#FFF3E0"
                                CornerRadius="4"
                                Padding="15"
                                Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="💡 使用说明"
                                           FontWeight="Bold"
                                           FontSize="14"
                                           Foreground="#F57C00"
                                           Margin="0,0,0,10"/>
                                <TextBlock TextWrapping="Wrap"
                                           FontSize="12"
                                           Foreground="#424242"
                                           LineHeight="20">
                                    <Run Text="1. 使用顶部搜索框搜索故障（支持搜索设备ID、故障类型、详情、批注）"/>
                                    <LineBreak/>
                                    <Run Text="2. 使用筛选条件按设备编号、年份、月份、状态快速定位故障"/>
                                    <LineBreak/>
                                    <Run Text="3. 从左侧列表选择要编辑的故障记录"/>
                                    <LineBreak/>
                                    <Run Text="4. 修改右侧表单中的故障信息和处理状态"/>
                                    <LineBreak/>
                                    <Run Text="5. 在批注框中添加处理进度、解决方案等信息"/>
                                    <LineBreak/>
                                    <Run Text="6. 点击顶部'保存数据'按钮保存所有修改"/>
                                    <LineBreak/>
                                    <Run Text="7. 修改将自动同步到 HomePageB 和 FaultReport 页面"/>
                                    <LineBreak/>
                                    <Run Text="8. 列表自动按'待处理 > 处理中 > 已处理'优先级排序"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
