<Window x:Class="DataVisualizationPlatform.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:Local="clr-namespace:DataVisualizationPlatform"
        xmlns:views="clr-namespace:DataVisualizationPlatform.Views"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MainWindowBackground}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/MainWindowStyle.xaml"/>
                <ResourceDictionary Source="Resources/Styles/PopupStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 转换器 -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <!-- 顶部标题栏 -->
            <RowDefinition Height="*"/>
            <!-- 内容区 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- 左侧导航栏 -->
            <ColumnDefinition Width="*"/>
            <!-- 右侧内容区 -->
        </Grid.ColumnDefinitions>

        <!-- 顶部标题栏 -->
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="Transparent"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>


                <!-- 窗口控制按钮 -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <!-- 最小化按钮 -->
                    <Button x:Name="MinimizeButton" Width="45" Height="35"
                            Click="MinimizeButton_Click"
                            Background="Transparent" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D1D1D6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Path Data="M0,0 L10,0" Stroke="#2C3E50" StrokeThickness="1"
                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>

                    <!-- 最大化/还原按钮 -->
                    <Button x:Name="MaximizeButton" Width="45" Height="35"
                            Click="MaximizeButton_Click"
                            Background="Transparent" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D1D1D6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Path x:Name="MaximizePath" Data="M0,0 L10,0 L10,10 L0,10 Z"
                              Stroke="#2C3E50" StrokeThickness="1" Fill="Transparent"
                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>

                    <!-- 关闭按钮 -->
                    <Button x:Name="CloseButton" Width="45" Height="35"
                            Click="CloseButton_Click"
                            Background="Transparent" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E81123"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Path Data="M0,0 L10,10 M0,10 L10,0" Stroke="#2C3E50" StrokeThickness="1"
                              VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Stroke" Value="#2C3E50"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                            <Setter Property="Stroke" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 左侧导航面板 -->
        <Border Grid.RowSpan="2" Grid.Column="0"
                Background="#D1D1D6">
            <Grid>
                <!-- 导航菜单 -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="NavigationPanel" Margin="0,20,0,0">
                        
                        <!-- Logo -->
                        <Image Source="Resources/Images/Logo.png"
                               Height="50"
                               Width="100"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                        <!-- MainMenu 按钮 -->
                        <RadioButton Style="{StaticResource VerticalBtnStyle}"
                                     Command="{Binding NavigateCommand}"
                                     CommandParameter="MainMenu">
                            <Grid>
                                <TextBlock Text="主菜单" Style="{StaticResource VerticalText_Style}"/>
                            </Grid>
                        </RadioButton>

                        <!-- EquipmentInfo 按钮 -->
                        <RadioButton Style="{StaticResource VerticalBtnStyle}"
                                     Command="{Binding NavigateCommand}"
                                     CommandParameter="EquipmentInfo">
                            <Grid>
                                <TextBlock Text="设备信息" Style="{StaticResource VerticalText_Style}"/>
                            </Grid>
                        </RadioButton>

                        <!-- FaultReport 按钮 -->
                        <RadioButton x:Name="FaultReportBtn"
                                     Style="{StaticResource VerticalBtnStyle}"
                                     Command="{Binding NavigateCommand}"
                                     CommandParameter="FaultReport">
                            <TextBlock Text="故障报告" Style="{StaticResource VerticalText_Style}"/>
                        </RadioButton>

                        <!-- Data 按钮 -->
                        <RadioButton x:Name="DataBtn"
                                     Style="{StaticResource VerticalBtnStyle}"
                                     Command="{Binding OpenCurrentMonthDataCommand}"
                                     MouseEnter="ButtonOrPopup_MouseEnter"
                                     MouseLeave="ButtonOrPopup_MouseLeave">
                            <TextBlock Text="数据查看" Style="{StaticResource VerticalText_Style}"/>
                        </RadioButton>

                        <!-- Data 子菜单（年份选择） -->
                        <StackPanel x:Name="DataSubMenu"
                                    Visibility="Collapsed"
                                    Background="#F5F5F7"
                                    Margin="10,5,10,5"
                                    Opacity="0.95">
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          MaxHeight="200">
                                <ItemsControl ItemsSource="{Binding Years}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Vertical"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Style="{StaticResource SubMenuButtonStyle}"
                                                         GroupName="DataSubMenu"
                                                         Command="{Binding DataContext.OpenYearlyDataCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                         CommandParameter="{Binding Key}">
                                                <TextBlock Text="{Binding DisplayYear}"
                                                           Foreground="#6B6B6B"
                                                           FontSize="12"
                                                           Margin="10,5"/>
                                            </RadioButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 右侧内容区域 -->
        <Grid Grid.Row="1" Grid.Column="1" x:Name="Display">
            <!-- Frame 层 -->
            <Frame x:Name="MainContentFrame"
                   Content="{Binding CurrentPage}"
                   NavigationUIVisibility="Hidden"
                   Margin="50,50,50,50"/>

            <!-- 固定按钮层 -->
            <Grid VerticalAlignment="Center" Margin="10,0,10,10">
                <Button Command="{Binding PreviousPageCommand}"
                        Visibility="{Binding IsButton1Visible, Converter={StaticResource BoolToVisibilityConverter}}"
                        HorizontalAlignment="Left"
                        Margin="10,0,0,0"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter />
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="Resources/Images/PrePage.png" Height="60" Width="60" />
                </Button>

                <Button Command="{Binding NextPageCommand}"
                        Visibility="{Binding IsButton2Visible, Converter={StaticResource BoolToVisibilityConverter}}"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <ContentPresenter />
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Image Source="Resources/Images/NextPage.png" Height="60" Width="60" />
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
