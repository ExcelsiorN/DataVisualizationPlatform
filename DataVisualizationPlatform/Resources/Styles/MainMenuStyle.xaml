<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 背景渐变 -->
    <LinearGradientBrush x:Key="MainWindowBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#D0D8E6" Offset="0"/>
        <GradientStop Color="#A6B9D3" Offset="0.6"/>
        <GradientStop Color="#7F94AF" Offset="0.85"/>
        <GradientStop Color="#5E6E88" Offset="1"/>
    </LinearGradientBrush>

    <!-- 卡片背景 - 半透明白色，与背景和谐 -->
    <SolidColorBrush x:Key="CardBackground" Color="#F5FFFFFF"/>

    <!-- 卡片边框 - 柔和的蓝灰色 -->
    <SolidColorBrush x:Key="CardBorder" Color="#4D6B8A"/>

    <!-- 标题文字颜色 - 深蓝灰 -->
    <SolidColorBrush x:Key="TitleForeground" Color="#2C3E50"/>

    <!-- 数值文字颜色 - 强调色 -->
    <SolidColorBrush x:Key="ValueForeground" Color="#34495E"/>

    <!-- 图标颜色 - 蓝色系 -->
    <SolidColorBrush x:Key="IconBrush" Color="#3498DB"/>

    <!-- 故障图标颜色 - 红色警告 -->
    <SolidColorBrush x:Key="WarningIconBrush" Color="#E74C3C"/>

    <!-- 卡片样式 -->
    <Style x:Key="DashboardCard" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#40000000" Direction="315" ShadowDepth="8" BlurRadius="16" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#60000000" Direction="315" ShadowDepth="12" BlurRadius="20" Opacity="0.4"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 页面主标题样式 -->
    <Style x:Key="PageTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TitleForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,40"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#30000000" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 卡片标题样式 -->
    <Style x:Key="CardTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{StaticResource TitleForeground}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- 数值样式 -->
    <Style x:Key="CardValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource ValueForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- 单位样式 -->
    <Style x:Key="CardUnit" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TitleForeground}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <!-- 图标容器样式 -->
    <Style x:Key="CardIcon" TargetType="Viewbox">
        <Setter Property="Width" Value="48"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- 图标路径基础样式 -->
    <Style x:Key="IconPath" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource IconBrush}"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <!-- 警告图标路径样式 -->
    <Style x:Key="WarningIconPath" TargetType="Path">
        <Setter Property="Fill" Value="{StaticResource WarningIconBrush}"/>
        <Setter Property="Stretch" Value="Uniform"/>
    </Style>

    <!-- 卡片内容堆栈面板样式 -->
    <Style x:Key="CardContent" TargetType="StackPanel">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 主内容网格样式 -->
    <Style x:Key="MainContentGrid" TargetType="Grid">
        <Setter Property="Margin" Value="40"/>
    </Style>

    <!-- 卡片容器网格样式 -->
    <Style x:Key="CardsContainer" TargetType="UniformGrid">
        <Setter Property="Columns" Value="3"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 动画样式 - 淡入效果 -->
    <Style x:Key="FadeInAnimation" TargetType="FrameworkElement">
        <Setter Property="Opacity" Value="0"/>
        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                         From="0" To="1" Duration="0:0:0.8"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>