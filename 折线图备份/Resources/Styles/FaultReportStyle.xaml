<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:cmd="clr-namespace:DataVisualizationPlatform.Commands">

    <!-- 转换器 -->
    <cmd:StatusToBrushConverter x:Key="StatusToBrushConverter" />
    <cmd:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!-- 卡片样式 -->
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderBrush" Value="#DDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#EEF2F7" Offset="0"/>
                    <!-- 高光白蓝 -->
                    <GradientStop Color="#D6DFEA" Offset="0.5"/>
                    <!-- 浅银蓝 -->
                    <GradientStop Color="#B7C4D6" Offset="1"/>
                    <!-- 柔和蓝灰 -->
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.5"/>
            </Setter.Value>
        </Setter>

        <!-- 添加 RenderTransform 以支持缩放和翻转 -->
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <TransformGroup>
                    <!-- [0]：翻转用 -->
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                    <!-- [1]：放大用 -->
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </TransformGroup>
            </Setter.Value>
        </Setter>

        <!-- 动画触发 -->
        <Style.Resources>
            <!-- 鼠标进入动画 -->
            <Storyboard x:Key="MouseEnterStoryboard">
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             To="0.95" Duration="0:0:0.15"/>
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             To="0.95" Duration="0:0:0.15"/>
            </Storyboard>

            <!-- 鼠标离开动画 -->
            <Storyboard x:Key="MouseLeaveStoryboard">
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                             To="1" Duration="0:0:0.15"/>
                <DoubleAnimation Storyboard.TargetProperty="(RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                             To="1" Duration="0:0:0.15"/>
            </Storyboard>
        </Style.Resources>

        <Style.Triggers>
            <!-- 鼠标悬停阴影变化 -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="6" Opacity="0.7"/>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <!-- 鼠标进入 -->
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard Storyboard="{StaticResource MouseEnterStoryboard}"/>
            </EventTrigger>

            <!-- 鼠标离开 -->
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard Storyboard="{StaticResource MouseLeaveStoryboard}"/>
            </EventTrigger>

            <!-- 翻转动画（绑定 IsFlipped） -->
            <DataTrigger Binding="{Binding IsFlipped}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <!-- 压缩到 0 宽 -->
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            From="1" To="0" Duration="0:0:0.25">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseIn"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <!-- 再从 0 恢复到 1 -->
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            From="0" To="1" BeginTime="0:0:0.25" Duration="0:0:0.25">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>

                <DataTrigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            From="1" To="0" Duration="0:0:0.25">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseIn"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                            From="0" To="1" BeginTime="0:0:0.25" Duration="0:0:0.25">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
            </DataTrigger>

            <!-- 放大动画（绑定 IsExpanded） -->
            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                <Setter Property="Panel.ZIndex" Value="999"/>
                <DataTrigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                            To="3" Duration="0:0:0.4">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                            To="3" Duration="0:0:0.4">
                                <DoubleAnimation.EasingFunction>
                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>

                <DataTrigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleX)"
                            To="1" Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseInOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(ScaleTransform.ScaleY)"
                            To="1" Duration="0:0:0.3">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseInOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- 翻转容器样式（简化版，主要负责内容切换） -->
    <Style x:Key="FlipZoomContainerStyle" TargetType="Grid">
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
    </Style>

    <!-- 标题文字 -->
    <Style x:Key="CardTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Foreground" Value="#222"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- 正文文字 -->
    <Style x:Key="CardItemText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="Foreground" Value="#555"/>
    </Style>

    <!-- 背面标题文字 -->
    <Style x:Key="BackTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="Foreground" Value="#222"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

    <!-- 图表标签文字 -->
    <Style x:Key="ChartLabelText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#444"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
    </Style>

    <!-- 在线状态颜色转换器（需在代码中实现） -->
    <sys:Boolean x:Key="True">True</sys:Boolean>

</ResourceDictionary>