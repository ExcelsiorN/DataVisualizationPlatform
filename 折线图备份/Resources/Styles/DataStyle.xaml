<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib"
                    xmlns:cmd="clr-namespace:DataVisualizationPlatform.Commands;assembly=DataVisualizationPlatform"
>

    <!-- 转换器 -->
    <cmd:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

    <!-- 页面标题样式 -->
    <Style x:Key="PageTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="3" ShadowDepth="2" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 页面副标题样式 -->
    <Style x:Key="PageSubtitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#7F8C8D"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>

    <!-- 卡片样式 -->
    <Style x:Key="MainCardStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderBrush" Value="#DDD"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#EEF2F7" Offset="0"/>
                    <!-- 高光白蓝 -->
                    <GradientStop Color="#D6DFEA" Offset="0.5"/>
                    <!-- 浅银蓝 -->
                    <GradientStop Color="#B7C4D6" Offset="1"/>
                    <!-- 柔和蓝灰 -->
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="8" ShadowDepth="4" Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 折线图容器样式 -->
    <Style x:Key="LineChartContainerStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="BorderBrush" Value="#E8EDF3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#FBFCFD" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.1" Color="#000000"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="30"/>
    </Style>

    <!-- 折线样式 - 预约数据（绿色） -->
    <Style x:Key="ReservationLineStyle" TargetType="Line">
        <Setter Property="Stroke" Value="#4CAF50"/>
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#4CAF50" BlurRadius="4" ShadowDepth="0" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 折线样式 - 故障数据（橙色） -->
    <Style x:Key="FaultLineStyle" TargetType="Line">
        <Setter Property="Stroke" Value="#FF9800"/>
        <Setter Property="StrokeThickness" Value="3"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#FF9800" BlurRadius="4" ShadowDepth="0" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 数据点样式 - 预约数据 -->
    <Style x:Key="ReservationPointStyle" TargetType="Ellipse">
        <Setter Property="Fill" Value="#4CAF50"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#2E7D32" BlurRadius="3" ShadowDepth="1" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Fill" Value="#66BB6A"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 数据点样式 - 故障数据 -->
    <Style x:Key="FaultPointStyle" TargetType="Ellipse">
        <Setter Property="Fill" Value="#FF9800"/>
        <Setter Property="Width" Value="8"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Stroke" Value="White"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#E65100" BlurRadius="3" ShadowDepth="1" Opacity="0.4"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Width" Value="12"/>
                <Setter Property="Height" Value="12"/>
                <Setter Property="Fill" Value="#FFB74D"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 中轴线样式 -->
    <Style x:Key="CenterLineStyle" TargetType="Line">
        <Setter Property="Stroke" Value="#BDC3C7"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeDashArray" Value="5,5"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>

    <!-- 网格线样式 -->
    <Style x:Key="GridLineStyle" TargetType="Line">
        <Setter Property="Stroke" Value="#ECF0F1"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <!-- 月份标签样式 -->
    <Style x:Key="MonthLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#5D6D7E"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- 数值标签样式 -->
    <Style x:Key="ValueLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#34495E"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Y轴标签样式 -->
    <Style x:Key="YAxisLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="#7F8C8D"/>
        <Setter Property="TextAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <!-- 图例颜色块样式 -->
    <Style x:Key="LegendColorBlock" TargetType="Border">
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.3"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 图例文本样式 -->
    <Style x:Key="LegendText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="#5D6D7E"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- 全局图例文本样式 -->
    <Style x:Key="GlobalLegendText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#34495E"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- 全局图例容器样式 -->
    <Style x:Key="GlobalLegendContainerStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Background" Value="#F8F9FA"/>
        <Setter Property="BorderBrush" Value="#E9ECEF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="15,10"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="4" ShadowDepth="2" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>